{
    "version": "3.4.1",
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2018"],
        "moduleResolution": "node",
        "target": "es6",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": false,
        "outDir": "dist",
        "incremental": true,
        "strictFunctionTypes":true
    },
    "files": ["src/bin/index.ts"]
}
