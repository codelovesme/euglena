{
    "version": "3.4.1",
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2018"],
        "target": "es5",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "incremental": true
    },
    "exclude": ["node_modules", "dist"]
}
