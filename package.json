{
    "name": "euglena",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "compile": "npx lerna run compile",
        "clean": "rm -r node_modules && npx lerna run clean",
        "cleanDependencies": "rm -r node_modules && npx lerna run cleanDependencies",
        "cleanDist": "npx lerna run cleanDist",
        "publishNPM": "npx lerna publish from-package --no-verify-access -y",
        "versionPatch": "npx lerna version patch --force-publish -y",
        "versionMinor": "npx lerna version minor --force-publish -y",
        "versionMajor": "npx lerna version major --force-publish -y"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "dependencies": {
        "lerna":"^4.0.0",
        "typescript": "^4.7.4",
        "yarn": "~1.22.10"
    }
}
