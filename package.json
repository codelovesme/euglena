{
    "name": "euglena",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "compile": "./scripts/compile.sh",
        "clean": "rm -r node_modules && npx lerna run clean",
        "cleanDependencies": "rm -r node_modules && npx lerna run cleanDependencies",
        "cleanDist": "npx lerna run cleanDist",
        "publishNPM": "npx lerna publish from-package --no-verify-access -y",
        "versionPatch": "./scripts/update-euglena-deps.js patch && npx lerna version patch --force-publish -y",
        "versionMinor": "./scripts/update-euglena-deps.js minor && npx lerna version minor --force-publish -y",
        "versionMajor": "./scripts/update-euglena-deps.js major && npx lerna version major --force-publish -y",
        "linkDependencies":"./scripts/link.sh",
        "linkDependenciesWithCessnalib":"./scripts/link.sh 1",
        "unlinkDependencies":"rm -r ~/.config/yarn/link/@euglena"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "dependencies": {
        "lerna":"^4.0.0",
        "typescript": "^4.7.4",
        "yarn": "~1.22.10",
        "jest":"^28.1.3",
        "json-beautify": "^1.1.1"
    }
}
