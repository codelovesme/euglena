{
    "name": "euglena",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "compile": "npx lerna run compile",
        "clean": "rm -r node_modules && npx lerna run clean",
        "cleanDependencies": "rm -r node_modules && npx lerna run cleanDependencies",
        "cleanDist": "npx lerna run cleanDist",
        "publish": "npx lerna publish from-package --no-verify-access -y"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "dependencies": {
        "lerna":"^4.0.0",
        "typescript": "^3.6.3",
        "yarn": "~1.22.10"
    }
}
